<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Mobile.Views.Login.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Username" Text="{Binding Username}"/>
            <Entry Placeholder="Email" Text="{Binding Email}"/>
            <Entry Placeholder="Password" Text="{Binding Password}"/>
            <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}"/>
            <Button Text="Login" Command="LoginCommand"/>
            <Button Text="Register" Command="RegisterCommand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>