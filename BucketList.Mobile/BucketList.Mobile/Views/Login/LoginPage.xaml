<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Mobile.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <StackLayout Margin="25"
                     VerticalOptions="CenterAndExpand">
            <Entry Placeholder="Email" Text="{Binding Email}"/>
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="true"/>

            <StackLayout Margin="5">
                <Button Text="Login" Command="{Binding LoginCommand}" Style="{StaticResource styleButton}"/>
                <Button Text="Register" Command="{Binding RegisterCommand}" Style="{StaticResource styleButton}"/>
            </StackLayout>
            
            <Button Text="Forgot Password"
                    BackgroundColor="{StaticResource colorBackground}"
                    Command="{Binding ForgotPasswordCommand}"
                    TextColor="Blue"
                    FontSize="Small"
                    HorizontalOptions="Center"/>

            <ActivityIndicator
                IsRunning="{Binding Loading}"
                HeightRequest="350"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                Color="DarkGray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>