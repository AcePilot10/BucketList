<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Mobile.Views.MyBucketListView"
             xmlns:viewmodels="clr-namespace:BucketList.Mobile.ViewModels"
             xmlns:controls="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             xmlns:ads="clr-namespace:BucketList.Mobile.Views.Views">
    <ContentView.BindingContext>
        <viewmodels:MyBucketListViewModel/>
    </ContentView.BindingContext>
    <ContentView.Content>
        <StackLayout>
            
            <ListView ItemsSource="{Binding Path=Items}"
                      x:Name="listItems"
                      ItemSelected="listItems_ItemSelected"
                      SeparatorColor="Black">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="bucket_black.png" HorizontalOptions="Start"/>
                                <Label Text="{Binding Path=Item.Item}"
                                       Style="{StaticResource styleBucketListItem}"/>
                                <Image Source="checked.png"
                                       IsVisible="{Binding IsCompleted}"
                                       BackgroundColor="Green"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <controls:FloatingActionButton x:Name="FAB"
                                           Margin="15"
                                           HorizontalOptions="EndAndExpand"
                                           WidthRequest="100"
                                           HeightRequest="100"
                                           VerticalOptions="EndAndExpand"
                                           Image="plus.png"
                                           ButtonColor="{StaticResource colorSecondary}"
                                           Clicked="FAB_Clicked"/>

            <!--<ads:AdView BackgroundColor="Red"
                        HorizontalOptions="FillAndExpand"
                        HeightRequest="85"/>-->

        </StackLayout>
    </ContentView.Content>
</ContentView>