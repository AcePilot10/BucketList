<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Mobile.Views.NavBarView"
             xmlns:viewmodels="clr-namespace:BucketList.Mobile.ViewModels">

    <ContentView.Content>
      <StackLayout>
            <Grid VerticalOptions="EndAndExpand"
                  ColumnSpacing="0"
                  BackgroundColor="Black">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Text="Friends"
                        Grid.Column="0"
                        Style="{StaticResource styleNavButton}"
                        Command="{Binding NavigateFriendsCommand}"/>

                <Button Text="Feed" 
                        Grid.Column="1" 
                        Style="{StaticResource styleNavButton}"
                        Command="{Binding NavigateFeedCommand}"/>

                <Button Text="My Bucket List" 
                        Grid.Column="2" 
                        Style="{StaticResource styleNavButton}"
                        Command="{Binding NavigateMyListCommand}"/>
            </Grid>
        </StackLayout>
  </ContentView.Content>
</ContentView>