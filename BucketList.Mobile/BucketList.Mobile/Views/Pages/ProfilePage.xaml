<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Mobile.Views.Pages.ProfilePage"
             BackgroundColor="{StaticResource colorBackground}"
             Title="{Binding Path=User.Username, StringFormat='\{0}\'s Profile'}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Unfollow" 
                     Order="Secondary"
                     Command="{Binding UnfollowCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Margin="15">
            <Button Text="Follow"
                    Command="{Binding FollowCommand}"
                    IsVisible="{Binding UserIsNotFollowing}"
                    Style="{StaticResource styleButton}"/>

            <Label Text="{Binding Path=User.Username, StringFormat='\{0}\'s Profile'}"
                    TextColor="{StaticResource colorText}"
                    FontSize="Large"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"/>
                
            <Label Text="Bucket List"
                   TextColor="{StaticResource colorTextSecondary}"
                   FontSize="Medium"
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Center"/>
                   
            <ListView ItemsSource="{Binding Path=Items}"
                      x:Name="listItems"
                      ItemSelected="listItems_ItemSelected"
                      Margin="15"
                      SeparatorColor="Black">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout BackgroundColor="{Binding BackgroundColor}">
                                <Label Text="{Binding Path=Item}"
                                       Style="{StaticResource styleBucketListItem}"
                                       FontSize="Small"
                                       TextColor="{StaticResource colorSecondary}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>