<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Mobile.Views.SearchPage"
             Title="Search">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Orientation="Horizontal">
                <Entry Text="{Binding Query}" HorizontalOptions="FillAndExpand"/>
                <Button Text="Search" Command="{Binding SearchCommand}"/>
            </StackLayout>

            <ListView ItemsSource="{Binding SearchResults}"
                      BackgroundColor="Red">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <Label Text="{Binding UserName}" HorizontalTextAlignment="Center"/>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>