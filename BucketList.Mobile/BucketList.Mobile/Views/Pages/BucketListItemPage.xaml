<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Mobile.Views.Pages.BucketListItemPage"
             Title="My Bucket List"
             BackgroundColor="{StaticResource colorBackground}">

    <ContentPage.Resources>
        <Style x:Key="btnOption" TargetType="Button">
            <Setter Property="WidthRequest" Value="75"/>
            <Setter Property="HeightRequest" Value="75"/>
            <Setter Property="CornerRadius" Value="40"/>
        </Style>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Margin="15"
                         Padding="15">

                <Label Text="{Binding Item.Item}"
                       Style="{StaticResource styleBucketListItemData}"
                       BackgroundColor="#5364E3"/>

                <Label Text="{Binding Path=StatusText, StringFormat='Status: {0}'}"
                       Style="{StaticResource styleBucketListItemData}"
                       BackgroundColor="{Binding BackgroundColor}"/>

                <Label Text="{Binding Path=Item.Created, StringFormat='Created {0:M}'}"
                       Style="{StaticResource styleBucketListItemData}"/>

            </StackLayout>

            <Grid VerticalOptions="EndAndExpand"
                  ColumnSpacing="10"
                  Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Image="trash.png"
                        x:Name="btnDelete"
                        Command="{Binding DeleteCommand}" 
                        Grid.Column="0"
                        BackgroundColor="Red"
                        Style="{StaticResource btnOption}"/>
                
                <Button Image="{Binding SetStatusImage}"
                        Command="{Binding SetStatusCommand}"
                        x:Name="btnComplete"
                        Grid.Column="1"
                        BackgroundColor="Green"
                        Style="{StaticResource btnOption}"/>
                
                <Button Image="edit.png"
                        Command="{Binding EditCommand}"
                        x:Name="btnEdit"
                        BackgroundColor="Blue"
                        Grid.Column="2"
                        Style="{StaticResource btnOption}"/>
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>